{
  "kind": "collectionType",
  "collectionName": "bookings",
  "info": {
    "singularName": "booking",
    "pluralName": "bookings",
    "displayName": "Booking",
    "description": "User bookings for class occurrences"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "config": {
    "attributes": {
      "classOccurrence": {
        "mainField": "title"
      },
      "user": {
        "mainField": "email"
      }
    }
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "bookings"
    },
    "classOccurrence": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::class-occurrence.class-occurrence",
      "inversedBy": "bookings",
      "required": true
    },
    "stripePaymentId": {
      "type": "string",
      "required": true
    },
    "stripeSessionId": {
      "type": "string"
    },
    "bookingDate": {
      "type": "datetime",
      "default": "2025-09-06T04:00:00.000Z"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "confirmed", "cancelled"],
      "default": "pending"
    },
    "notes": {
      "type": "text"
    }
  }
}
