{
  "kind": "collectionType",
  "collectionName": "class_occurrences",
  "info": {
    "singularName": "class-occurrence",
    "pluralName": "class-occurrences",
    "displayName": "Class Occurrence",
    "description": "Specific date/time occurrences for classes that users can book"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "date": {
      "type": "date",
      "required": true
    },
    "startTime": {
      "type": "time",
      "required": true
    },
    "endTime": {
      "type": "time",
      "required": true
    },
    "maxCapacity": {
      "type": "integer",
      "default": 20,
      "required": true
    },
    "bookedCount": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "level": {
      "type": "enumeration",
      "enum": ["BEGINNER", "INTERMEDIATE", "ADVANCED"],
      "default": "BEGINNER",
      "required": true
    },
    "instructor": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string"
    },
    "isActive": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "songThumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "externalVideoIds": {
      "type": "json"
    },
    "bookings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::booking.booking",
      "mappedBy": "classOccurrence"
    }
  }
}
