{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "public/**", "config/**", "database/**", ".env"]
      }
    }
  ],
  "routes": [
    {
      "src": "/admin(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/i18n(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/content-manager(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/uploads(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DATABASE_CLIENT": "postgres"
  },
  "functions": {
    "index.js": {
      "maxDuration": 30
    }
  }
}
